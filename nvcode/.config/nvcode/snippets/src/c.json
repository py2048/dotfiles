{
    "define": {
        "prefix" : ["def", "define"],
        "body": "#define "
    },
    "main": {
        "prefix" : "main",
        "body" : ["int main()", "{", "\t$1", "\treturn 0;", "}"]
    },
    "mainarg": {
        "prefix" : "main_arg",
        "body" : ["int main (int argc, char *argv[])", "{", "\t$1", "\treturn 0;", "}"]
    },
    "printf":{
        "prefix" : "printf",
        "body" : "printf(\"${1:%s\\n}\", $2);"
    },
    "print":{
        "prefix" : "printf_str",
        "body" : "printf(\"${1:\\n}\");"
    },
    "while": {
        "prefix": "while",
        "body": ["while ($1) {", "\t$2", "}"],
        "description": "while loop"
    },
    "for": {
        "prefix": "for",
        "body": ["for ($1) {", "\t$2", "}"],
        "description": "for loop"
    },
    "if": {
        "prefix": "if",
        "body": ["if ($1) {", "\t$2", "}"],
        "description": "if loop"
    },
    "else": {
        "prefix": "else",
        "body": ["else {", "\t$1", "}"],
        "description": "Code snippet for else statement"
    },
    "else if": {
        "prefix": ["else if", "elif"],
        "body": ["else if ($1) {", "\t$2", "}"],
        "description": "Code snippet for else-if statement"
    },
    "1while": {
        "prefix": "while1",
        "body": ["while ($1)", "\t$2"],
        "description": "one line while loop"
    },
    "1for": {
        "prefix": "for1",
        "body": ["for ($1)", "\t$2"],
        "description": "one line for loop"
    },
    "1if": {
        "prefix": "if1",
        "body": ["if ($1)", "\t$2"],
        "description": "one line if"
    },
    "1else": {
        "prefix": "else1",
        "body": ["else", "\t$1"],
        "description": "Code snippet for else statement"
    },
    "1else if": {
        "prefix": ["else if1", "elif1"],
        "body": ["else if ($1)", "\t$2"],
        "description": "Code snippet for else-if statement"
    }
}
